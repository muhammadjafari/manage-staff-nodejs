<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home</title>
    <link rel="stylesheet" href="/dependencies/bootstrap/bootstrap.rtl.css" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <%- include("../partials/nav") %>
    <div class="width-container">
      <h1 class="my-5">صفحه محتوا ادمین</h1>
      <div class="container-fluid">
        <div class="row">
          <% if (contents.length === 0) {%>
          <h2>محتوایی وجود ندارد</h2>
          <% } else { contents.map( content => {%>
          <div class="col-12">
            <div class="border border-2 my-2 p-3">
              <% if (content.vip === true) {%>
              <p class="text-center">محتوا ویژه</p>
              <% }%>
              <h3><%= content.title %></h3>
              <p><%= content.text %></p>
            </div>
          </div>
          <% })} %>
        </div>
      </div>
    </div>

    <script src="/dependencies/bootstrap/bootstrap.bundle.js"></script>
  </body>
</html>
